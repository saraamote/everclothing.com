/*

Bespoke Styles

*/

/* fonts and reset */

body, p, a, h1, h2, h3, h4, h5, h6, span,
.featured_links a span,
.nav a,
.nav a:visited,
.nav a:active,
#header a span,
.nav a.icon-cart span,
.search-close,
.collection_title,
.headline,
p.subtitle{

  font-family: "proxima-nova",sans-serif;
  -webkit-font-smoothing: subpixel-antialiased;
  text-rendering: geometricPrecision;

}

/* table */

table tr,
table td {

  border: none! important;

}

/* button  */

input[type="text"], input[type="number"], input[type="password"], input[type="email"], textarea, select {

  -webkit-border-radius: 0px;
  -khtml-border-radius: 0px;
  -moz-border-radius: 0px;
  -ms-border-radius: 0px;
  -o-border-radius: 0px;
  border-radius: 0px;

}

a.button, button, input[type="submit"], input[type="reset"], input[type="button"], .action_button, a.action_button, input.action_button[type="submit"], input.action_button[type="button"] {

-webkit-transition: all 200ms ease 0s;
-moz-transition: all 200ms ease 0s;
-ms-transition: all 200ms ease 0s;
-o-transition: all 200ms ease 0s;
transition: all 200ms ease 0s;
-webkit-appearance: none;
-webkit-border-radius: 0px;
-khtml-border-radius: 0px;
-moz-border-radius: 0px;
-ms-border-radius: 0px;
-o-border-radius: 0px;
border-radius: 0px;
-webkit-box-shadow: none;
-moz-box-shadow: none;
box-shadow: none;

font-size: 16px;
padding: 10px 30px;

}

/* header */

.main.content {

  padding: 110px 0px 30px 0px;

}

.header {

  box-shadow: inset 0px 0px 2px rgba( 0 , 0 , 0 , 0.25 );
  border: none;

}

.logo img {

  max-width: 85%;

}

ul.menu .arrow {

  display: none;

}

a.sub-menu.active:after {

  display: none;

}

.menu ul a {

  font-weight: 100;

}


/* footer */

.sub-footer {

  margin-top: 10px;

}

.footer .container,
.footer {

  padding: 0;

}

.footer .container p {

  margin: 5px;

}


